<Agencies>
	<Agency>
		<Name>AFB Military Police</Name>
		<ShortName>AFBMP</ShortName>
		<ScriptName>afbmp</ScriptName>
		<TextureDictionary>dia_police</TextureDictionary>
		<TextureName>dia_police</TextureName>
		<Inventory>default</Inventory>
		<Loadout>
			<Name>Patrol Unit</Name>
			<Vehicles>
				<Vehicle>afbpol1</Vehicle>
			</Vehicles>
			<Peds>
				<!-- 50% chance of male peds -->
				<Ped chance="70" outfit="mp_officer" inventory="usafmp">mp_m_freemode_01</Ped> 
				<!-- 30% chance of female peds -->
				<Ped chance="30" outfit="mp_officer" inventory="usafmp">mp_f_freemode_01</Ped>
				<!-- 10% chance of male peds -->
				<Ped chance="0" outfit="usaf_fatigues" inventory="usafmp">mp_m_freemode_01</Ped> 
				<!-- 10% chance of female peds -->
				<Ped chance="0" outfit="usaf_fatigues" inventory="usafmp">mp_f_freemode_01</Ped>
				<!-- 10% chance of female peds -->				
				<Ped chance="0" outfit="mp_soldier" inventory="usafmp">mp_m_freemode_01</Ped> 
				<!-- 10% chance of female peds -->
				<Ped chance="0" outfit="mp_soldier" inventory="usafmp">mp_f_freemode_01</Ped>
			</Peds>
			<NumPeds min="1" max="2" />
			<Flags>
				<Flag>SWAT</Flag> <!-- This is a special flag which enhances the combat abilities of all officers within the loadout. -->
				<Flag>RespondsAsTransport</Flag> <!-- Makes the unit eligible to be called for prisoner transport.  Only use this if there will be free seats for prisoners. -->
				<Flag>RespondsAsBackup</Flag>    <!-- Makes the unit eligible to be called as either Code 2, Code 3 or Pursuit backup. -->
				<Flag>SpawnsAmbiently</Flag>     <!-- Makes the unit eligible to spawn ambiently - e.g. on patrol in the area or outside of police stations -->
			</Flags>
		</Loadout>
	</Agency>
